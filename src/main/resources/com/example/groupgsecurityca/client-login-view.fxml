<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<AnchorPane fx:id="loginAP"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.groupgsecurityca.Controllers.LoginController"
            prefHeight="400" prefWidth="478">  <!-- Increased height to fit new elements -->
    <Label layoutX="30" layoutY="80" text="Username">
        <font>
            <Font name="Arial Rounded MT Bold" size="23"/>
        </font>
    </Label>
    <TextField fx:id="usernameTF" layoutX="30" layoutY="110"
               prefWidth="420" prefHeight="26"/>

    <Label layoutX="30" layoutY="160" text="Password">
        <font>
            <Font name="Arial Rounded MT Bold" size="23"/>
        </font>
    </Label>
    <PasswordField fx:id="passwordTF" layoutX="30" layoutY="190" prefHeight="26" prefWidth="420"/>

    <Button fx:id="loginBTN" layoutX="210" layoutY="250" text="Login"/>

    <Button fx:id="createAccountBTN" layoutX="180" layoutY="290" text="Create Account" onAction="#showRegistration"/>

    <Label layoutX="196" layoutY="26" text="Login">
        <font>
            <Font name="Arial Rounded MT Bold" size="23"/>
        </font>
    </Label>

    <Label fx:id="registerLabel" layoutX="160" layoutY="26" text="Register New Account" visible="false">
        <font>
            <Font name="Arial Rounded MT Bold" size="23"/>
        </font>
    </Label>
    <Label layoutX="30" layoutY="80" text="New Username" visible="false">
        <font>
            <Font name="Arial Rounded MT Bold" size="23"/>
        </font>
    </Label>
    <TextField fx:id="regUsernameTF" layoutX="30" layoutY="110" promptText="New Username" visible="false"
               prefWidth="420" prefHeight="26"/>
    <Label layoutX="30" layoutY="160" text="New Password" visible="false">
        <font>
            <Font name="Arial Rounded MT Bold" size="23"/>
        </font>
    </Label>
    <PasswordField fx:id="regPasswordTF" layoutX="30" layoutY="190" promptText="New Password" visible="false"
                   prefHeight="26" prefWidth="420"/>
    <Label layoutX="30" layoutY="220" text="Confirm Password" visible="false">
        <font>
            <Font name="Arial Rounded MT Bold" size="23"/>
        </font>
    </Label>
    <PasswordField fx:id="regConfirmPasswordTF" layoutX="30" layoutY="250" promptText="Confirm Password" visible="false"
                   prefHeight="26" prefWidth="420"/>
    <Button fx:id="registerBTN" layoutX="210" layoutY="290" text="Register" visible="false" onAction="#registerAccount"/>
    <Button fx:id="backToLoginBTN" layoutX="150" layoutY="330" text="Back to Login" visible="false" onAction="#showLogin"/>
</AnchorPane>